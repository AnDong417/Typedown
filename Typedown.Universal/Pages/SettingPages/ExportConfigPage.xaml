<Page
    x:Class="Typedown.Universal.Pages.SettingPages.ExportConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Typedown.Universal.Pages.SettingPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:export="using:Typedown.Universal.Controls.SettingControls.SettingItems.ExportConfigItems"
    Loaded="OnLoaded"
    Unloaded="OnUnloaded"
    mc:Ignorable="d">
    <export:CommonConfig 
        ExportConfig="{x:Bind ExportConfig, Mode=OneWay}" 
        Detail="{x:Bind GetExportConfigItem(ExportConfig.Type), Mode=OneWay}"/>
</Page>
